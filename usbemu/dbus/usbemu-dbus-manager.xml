<?xml version="1.0" encoding="UTF-8" ?>
<node name="/org/usbemu/UsbemuManager">
  <!--
    org.usbemu.UsbemuManager:
    @short_description: Main DBus interface for usbemu service
  -->
  <interface name="org.usbemu.UsbemuManager">
    <annotation name="org.gtk.GDBus.C.Name" value="Manager"/>

    <!--
      AddDevice:
      @settings: Settings for the new device.
      @path: Object path for the newly created device.

      Add a new emulated device with specified settings.
    -->
    <method name="AddDevice">
      <arg name="settings" type="a{sa{sv}}" direction="in"/>
      <arg name="path" type="o" direction="out"/>
    </method>

    <!--
      RemoveDevice:
      @path: Object path for the victim device to be removed.

      Remove an existing emulated device.
    -->
    <method name="RemoveDevice">
      <arg name="path" type="o" direction="in"/>
    </method>

    <!--
      DeviceAdded:
      @path: Object path for the newly created device.

      Notifies when a new device is created.
    -->
    <signal name="DeviceAdded">
      <arg name="path" type="o"/>
    </signal>

    <!--
      DeviceRemoved:
      @path: Object path for the removed device.

      Notifies when a device is removed.
    -->
    <signal name="DeviceRemoved">
      <arg name="path" type="o"/>
    </signal>

    <!-- Devices: A list of emulated devices. -->
    <property name="Devices" type="ao" access="read"/>

    <!-- Version: UsbemuManager version -->
    <property name="Version" type="s" access="read"/>
  </interface>
</node>
